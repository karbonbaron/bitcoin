monicoin_qt_libtoolflags = $(AM_LIBTOOLFLAGS) --tag CXX

qt_monicoin_qt_CPPFLAGS = $(monicoin_qt_cppflags)
qt_monicoin_qt_CXXFLAGS = $(monicoin_qt_cxxflags)
qt_monicoin_qt_SOURCES = $(monicoin_qt_sources)
